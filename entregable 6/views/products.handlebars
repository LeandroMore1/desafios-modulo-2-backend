<div class="d-flex header justify-content-between align-items-center">
<h1 class="titleProducts">
    Productos:
</h1>
<a href="/api/carts/{{cartId}}" class="btn btn-primary btn-sm active cartButton" role="button" aria-pressed="true">Ir al carrito</a>
</div>

<nav aria-label="Page navigation example " class="d-flex justify-content-center">
  <ul class="pagination">
    {{#if hasPrevPage}} <li class="page-item"> {{else}}<li class="page-item disabled">{{/if}}
        <a class="page-link" href="?limit={{limit}}&page={{prevPage}}&stock={{stock}}&category={{category}}">Anterior</a></li>

    <li class="page-item numPag"><a class="page-link numPag" href="?limit={{limit}}&page={{page}}&stock={{stock}}&category={{category}}">Página {{page}}</a></li>

     {{#if hasNextPage}} <li class="page-item"> {{else}}<li class="page-item disabled">{{/if}}<a class="page-link" href="?limit={{limit}}&page={{nextPage}}&stock={{stock}}&category={{category}}">Siguiente</a>
     </li>
  </ul>
</nav>

<div id="products">
    

    {{#each docs}}
    <div id="product">

        <div class="cont title">
            <h2>producto: {{this.title}}</h2>
        </div>

        <div class="cont">
            <h2>categoria: {{this.category}}</h2>
        </div>

        <div class="cont">
            <h2>precio: {{this.price}}</h2>
        </div>

        <div class="cont">
            <h2>descripcion: {{this.description}}</h2>
        </div>
        
        <div class="cont">
            <h2>stock disponible: {{this.stock}}</h2>
        </div>

        <div class="cont button">
        <button type="button" onclick="addProduct('{{../cartId}}','{{this._id}}')" class="btn btn-light btn-sm" >agregar</button>
        </div>

    </div>
    {{/each}}
</div>

<nav aria-label="Page navigation example " class="d-flex justify-content-center">
  <ul class="pagination">
    {{#if hasPrevPage}} <li class="page-item"> {{else}}<li class="page-item disabled">{{/if}}
        <a class="page-link" href="?limit={{limit}}&page={{prevPage}}&stock={{stock}}&category={{category}}">Anterior</a></li>

    <li class="page-item numPag"><a class="page-link numPag" href="?limit={{limit}}&page={{page}}&stock={{stock}}&category={{category}}">Página {{page}}</a></li>

     {{#if hasNextPage}} <li class="page-item"> {{else}}<li class="page-item disabled">{{/if}}<a class="page-link" href="?limit={{limit}}&page={{nextPage}}&stock={{stock}}&category={{category}}">Siguiente</a>
     </li>
  </ul>
</nav>




<script src="/js/cart.js"></script>